<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.coinque.fragment1"
    android:background="@drawable/tembok"
    android:id="@+id/rl"
    >

    <RelativeLayout
        android:id="@+id/rl_tabungan"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:background="@drawable/tabungan_bar"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/tv_nominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 25.000"
            android:layout_marginStart="35dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="8dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_durasi_tabungan"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_below="@id/rl_tabungan"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/tabungan_durasi_bar">

        <TextView
            android:id="@+id/tv_durasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="35dp"
            android:text="7 Hari"
            android:textSize="9dp"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_lifepoints"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rl_tabungan"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bar_lifepoint">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_points"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/rl_lifepoints"


        android:layout_alignTop="@+id/rl_durasi_tabungan"
        android:background="@drawable/bar_point">


    </RelativeLayout>

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/lantai"
        android:layout_alignParentBottom="true"
        />

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/gifku"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/angkatkaki"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/tempatmakanfull"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/data"
        android:layout_marginBottom="12dp"
        android:id="@+id/wadahPakan"
        />

</RelativeLayout>
